@model ConsumeAPICore.Models.Car

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Car_Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car_Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Car_Plate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car_Plate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Car_Image)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car_Image)
        </dd>
        <dt>
            @{
                if (Model.Car_Status == 0)
                {
                    Write("Available");
                }
                else
                {
                    Write("Not Available");
                }
            }
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car_Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
