@model IEnumerable<ConsumeAPICore.Models.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car_Plate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car_Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car_Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @{
                    Write(i);
                    i++;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car_Plate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car_Image)
            </td>
            <td>
                @{
                    if(item.Car_Status == 0)
                    {
                        Write("Available");
                    }
                    else
                    {
                        {
                        Write("Not Available");
                    }
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
